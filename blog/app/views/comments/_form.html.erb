<% if @comment.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @comment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


<%= form_for ([@blog, @comment]) do |f| %>
<div class="form-group">
  <%= f.label :user %><br>
  <%= f.text_field :user %>
</div>
<div class="form-group">
  <%= f.label :email %><br>
  <%= f.text_field :email %>

</div>
<div class="form-group">
  <%= f.label :remark %><br>
  <%= f.text_area :remark %>
</div>

  <%= f.submit %>

<% end %>
