<%= form_for ([@blog, @blog.comments.build]) do |f| %>
<p>
  <%= f.label :user %><br>
  <%= f.text_field :user %>
</p>
<p>
  <%= f.label :email %><br>
  <%= f.text_field :email, validate: { presence: true } %>
</p>
<p>
  <%= f.label :remark %><br>
  <%= f.text_area :remark, validate: { presence: true } %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>
