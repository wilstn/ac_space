<h3>Editing Comment</h3>

<%= form_for ([@blog, @comment]) do |f| %>
<p>
  <%= f.label :user %><br>
  <%= f.text_field :user %>
</p>
<p>
  <%= f.label :email %><br>
  <%= f.text_field :email %>
</p>
<p>
  <%= f.label :remark %><br>
  <%= f.text_area :remark %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>

<%= link_to 'Back', blog_path(@blog) %>
