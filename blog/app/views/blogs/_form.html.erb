<div class="container">
  <div class="form-area">
    <%= form_for @blog, :html => {:class => "form"} do |f| %>
      <div class="form-group">
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </div>
      <div class="form-group">
        <%= f.label :category %><br>
        <%= f.text_field :category %>
      </div>
      <div class="form-group">
        <%= f.label :author %><br>
        <%= f.text_field :author %>
      </div>
      <div class="form-group">
        <%= f.label :post %><br>
        <%= f.text_area :post , :class => "posting-area"%>
      </div>
        <%= f.submit 'Submit',class: "btn btn-default" %>
    <% end %>
  </div>
</div>
