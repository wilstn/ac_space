<%= form_for @blog do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :category %><br>
    <%= f.text_field :category %>
  </p>
  <p>
    <%= f.label :author %><br>
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label :post %><br>
    <%= f.text_area :post %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
