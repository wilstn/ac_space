<h1>Blog Header</h1>
<h2>Listing articles</h2>

<table>

  <% @blogs.each do |blog_post| %>
    <tr>
      <td><%= blog_post.title %></td>
      <td><%= blog_post.category %></td>
      <td><%= blog_post.author %></td>
      <td><%= blog_post.post %></td>
      <td><%= link_to 'Edit', edit_blog_path(blog_post) %></td>
      <td><%= link_to 'Destroy', blog_path(blog_post),
              method: :delete,
              data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New Post', new_blog_path %>
