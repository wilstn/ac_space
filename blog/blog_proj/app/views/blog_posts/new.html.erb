<h1>New blog post</h1>
<%= form_for :article, url: blog_posts_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :category %><br>
    <%= f.text_field :text %>
  </p>

  <p>
    <%= f.label :author %><br>
    <%= f.text_field :text %>
  </p>

  <p>
    <%= f.label :post %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
